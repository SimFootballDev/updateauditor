<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <TextArea fx:id="textAreaCurrentSeason" prefHeight="0.0" prefWidth="200.0" BorderPane.alignment="CENTER"
                  promptText="Current Season">
            <BorderPane.margin>
                <Insets bottom="32.0" left="32.0" right="32.0" top="32.0"/>
            </BorderPane.margin>
        </TextArea>
    </top>
    <center>
        <TextArea fx:id="textAreaPlayers" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER"
                  promptText="Sim CSV">
            <BorderPane.margin>
                <Insets bottom="32.0" left="32.0" right="32.0"/>
            </BorderPane.margin>
        </TextArea>
    </center>
    <bottom>
        <HBox alignment="CENTER" prefHeight="0.0" prefWidth="0.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="buttonLoadNSFL" mnemonicParsing="false" text="Load NSFL">
                    <font>
                        <Font size="24.0"/>
                    </font>
                    <HBox.margin>
                        <Insets right="32.0"/>
                    </HBox.margin>
                </Button>
                <Button fx:id="buttonLoadDSFL" mnemonicParsing="false" text="Load DSFL">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Button>
            </children>
            <BorderPane.margin>
                <Insets bottom="32.0"/>
            </BorderPane.margin>
        </HBox>
    </bottom>
</BorderPane>
